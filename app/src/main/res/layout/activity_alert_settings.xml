<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kapp.TrustFall.AlertSettings">

    <SeekBar
        android:id="@+id/CountdownSeekBar"
        style="@android:style/Widget.Material.SeekBar.Discrete"
        android:layout_width="226dp"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="12"
        android:progress="5"
        android:progressTint="@color/HealthyBlue"
        android:thumbTint="@color/DarkHealthyBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/OnOrOffSwitch"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Off/On"
        android:textOff="Disabled"
        android:textOn="Enabled"
        android:thumbTint="@color/HealthyBlue"
        android:trackTint="@color/DarkHealthyBlue"
        app:layout_constraintBottom_toTopOf="@+id/CountdownSeekBar"
        app:layout_constraintEnd_toEndOf="@+id/CountdownSeekBar"
        app:layout_constraintStart_toStartOf="@+id/CountdownSeekBar" />

    <Button
        android:id="@+id/SaveSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="Save"
        android:backgroundTint="@color/DarkHealthyBlue"
        android:textColor="@color/Ivory"
        app:layout_constraintEnd_toEndOf="@+id/CountdownSeekBar"
        app:layout_constraintStart_toStartOf="@+id/CountdownSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/SeekBarValue" />

    <TextView
        android:id="@+id/SeekBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Test"
        app:layout_constraintEnd_toEndOf="@+id/CountdownSeekBar"
        app:layout_constraintStart_toStartOf="@+id/CountdownSeekBar"
        app:layout_constraintTop_toBottomOf="@+id/CountdownSeekBar" />

</android.support.constraint.ConstraintLayout>
